<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/shaded_background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_subject"
            android:layout_toStartOf="@id/spinner_subject_wrapper"
            android:layout_marginStart="2dp"
            android:layout_alignTop="@id/spinner_subject_wrapper"
            android:layout_alignBottom="@id/spinner_subject_wrapper"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="@string/search_sections_subject" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_subject_wrapper"
            android:background="@color/design_default_color_background"
            android:layout_alignParentEnd="true">
            <Spinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:id="@+id/spinner_subject" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_courseLevel"
            android:layout_toStartOf="@id/spinner_courseLevel_wrapper"
            android:layout_alignTop="@id/spinner_courseLevel_wrapper"
            android:layout_alignBottom="@id/spinner_courseLevel_wrapper"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="@string/search_sections_courseLevel" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_courseLevel_wrapper"
            android:layout_alignParentEnd="true"
            android:background="@color/design_default_color_background">
            <Spinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:id="@+id/spinner_courseLevel" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_courseNum"
            android:labelFor="@id/editText_courseNum"
            android:layout_toStartOf="@id/editText_courseNum_wrapper"
            android:layout_alignTop="@id/editText_courseNum_wrapper"
            android:layout_alignBottom="@id/editText_courseNum_wrapper"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="@string/search_sections_courseNum" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_courseNum_wrapper"
            android:layout_alignParentEnd="true"
            android:background="@color/design_default_color_background">
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_courseNum"
                android:inputType="number"
                android:textSize="14sp"
                android:importantForAutofill="no" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_section"
            android:labelFor="@id/editText_section"
            android:layout_toStartOf="@id/editText_section_wrapper"
            android:layout_alignTop="@id/editText_section_wrapper"
            android:layout_alignBottom="@id/editText_section_wrapper"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="@string/search_sections_section" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_section_wrapper"
            android:layout_alignParentEnd="true"
            android:background="@color/design_default_color_background">
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_section"
                android:inputType="number"
                android:textSize="14sp"
                android:importantForAutofill="no" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>